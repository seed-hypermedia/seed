{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@shm/ui/*": ["./frontend/packages/ui/src/*"],
      "@shm/shared/*": ["./frontend/packages/shared/src/*"],
      "@shm/editor/*": ["./frontend/packages/editor/src/*"]
    },
    "plugins": [
      {
        // docs: https://github.com/nderscore/tamagui-typescript-plugin#readme
        "name": "@nderscore/tamagui-typescript-plugin",
        "pathToApp": "frontend/apps/site"
      },
      {
        // docs: https://github.com/nderscore/tamagui-typescript-plugin#readme
        "name": "@nderscore/tamagui-typescript-plugin",
        "pathToApp": "frontend/apps/desktop"
      }
    ]
  }
}
