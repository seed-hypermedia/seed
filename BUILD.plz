subinclude(
    "//build/rules/go:defs",
    "//build/rules/js:defs",
)

# Installs Go dependencies.
gomod(
    name = "gomod",
    visibility = [
        "//backend/...",
        "//build/tools/...",
    ],
)

# Installs JS dependencies.
pnpm_install(
    name = "pnpm",
    visibility = [
        "//build/tools/...",
        "//frontend/...",
    ],
)

export_file(
    name = "mise.toml",
    src = "mise.toml",
    visibility = ["PUBLIC"]
)
