{
  "name": "seed",
  "private": true,
  "scripts": {
    "test": "yarn workspace @shm/shared test",
    "shared:test": "yarn workspace @shm/shared test",
    "format:check": "yarn workspaces foreach -pt run format:check",
    "format:write": "yarn workspaces foreach -pt run format:write",
    "web": "yarn workspace @shm/web dev",
    "web:prod": "yarn build && yarn workspace @shm/web build",
    "web:start": "yarn workspace @shm/web start",
    "web:dev": "yarn web:prod && SEED_SIGNING_ENABLED=true yarn web:start",
    "web:dev:embed": "yarn web:prod && concurrently -c \"blue,green\" -p \"[{name}]\" \"SEED_IDENTITY_ENABLED=true PORT=3099 SEED_BASE_URL=\\\"http://localhost:3099\\\" SEED_DEFAULT_IDENTITY_ORIGIN=\\\"http://localhost:3000\\\" yarn web:start\" \"SEED_SIGNING_ISSUER=true SEED_SIGNING_ENABLED=true yarn web:start\"",
    "web:extract": "DISABLE_EXTRACTION=false yarn workspace @shm/site dev",
    "web:test": "yarn workspace @shm/web test",
    "desktop": "concurrently -n \"DESKTOP:APP,UI\" -c \"blue,green\" -p \"[{name}]\" \"yarn workspace @shm/desktop dev\" \"yarn watch\"",
    "desktop:make": "yarn build && yarn workspace @shm/desktop make",
    "desktop:package": "yarn build && yarn workspace @shm/desktop package",
    "desktop:test:package": "yarn build && yarn workspace @shm/desktop package:test",
    "desktop:publish": "yarn build && yarn workspace @shm/desktop publish",
    "desktop:test": "yarn workspace @shm/desktop test",
    "desktop:test:only": "yarn workspace @shm/desktop test:only",
    "desktop:devtools": "yarn workspace @shm/desktop devtools",
    "watch": "yarn workspaces foreach -pi run watch",
    "fix": "manypkg fix",
    "build": "yarn ui:build",
    "docs": "yarn workspace @shm/docs start",
    "ui:build": "yarn workspace @shm/ui generate && yarn workspace @shm/ui build",
    "performance": "yarn workspace @shm/performance test",
    "performance:dashboard": "yarn workspace @shm/performance-dashboard copy-results && yarn workspace @shm/performance-dashboard dev"
  },
  "repository": "github:mintterhypermedia/mintter",
  "packageManager": "yarn@3.6.1",
  "workspaces": [
    "frontend/apps/*",
    "frontend/packages/*",
    "frontend/apps/desktop/test/performance",
    "docs"
  ],
  "dependencies": {
    "@babel/runtime": "7.18.9",
    "@bufbuild/protoc-gen-es": "1.4.1",
    "@connectrpc/protoc-gen-connect-es": "1.6.1",
    "@manypkg/cli": "0.19.2",
    "@nderscore/tamagui-typescript-plugin": "0.5.4",
    "cross-env": "7.0.3",
    "prettier": "3.0.2",
    "react-native": "0.75.2",
    "react-native-svg": "15.6.0",
    "satori": "0.11.2",
    "svg2img": "1.0.0-beta.2",
    "typescript": "5.5.2"
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "asar": "^3.2.0",
    "babel-plugin-react-native-web": "0.19.9",
    "concurrently": "8.2.1",
    "lighthouse": "^12.4.0",
    "playwright": "1.40.1",
    "ts-node": "10.9.1",
    "vitest": "^3.0.9"
  }
}
