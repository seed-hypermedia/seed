    "debug": "<=4.4.1",
    "error-ex": "<=1.3.2",
    "has-ansi": "<=6.0.0",
    "is-arrayish": "<=0.3.2",
    "simple-swizzle": "<=0.2.2",
    "supports-color": "7.2.0",
    "supports-hyperlinks": "<=3.1.0",
    "ansi-regex": "5.0.1",
    "ansi-styles": "4.3.0",
    "slice-ansi": "3.0.0",
    "string-width": "4.2.3",
    "strip-ansi": "6.0.1",
    "wrap-ansi": "7.0.0",
    "cliui": "7.0.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/glob": "^8.1.0",
    "@types/jscodeshift": "^17.3.0",
    "asar": "^3.2.0",
    "babel-plugin-react-native-web": "0.19.9",
    "concurrently": "8.2.1",
    "jscodeshift": "^17.3.0",
    "lighthouse": "^12.4.0",
    "playwright": "1.40.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "ts-node": "10.9.1",
    "vitest": "^3.0.9"
  }
}
