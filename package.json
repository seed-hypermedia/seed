{
  "name": "seed",
  "private": true,
  "scripts": {
    "// === Testing ===": "",
    "test": "pnpm run test:web && pnpm run test:shared",
    "test:web": "pnpm --filter=@shm/web test",
    "test:shared": "pnpm --filter=@shm/shared test",
    "test:desktop": "pnpm --filter=@shm/desktop test",
    "// === Type Checking (No Build Step!) ===": "",
    "typecheck": "pnpm -r --filter='./frontend/**' run typecheck",
    "typecheck:web": "pnpm --filter=@shm/web typecheck",
    "typecheck:desktop": "pnpm --filter=@shm/desktop typecheck",
    "// === Formatting ===": "",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "// === Security ===": "",
    "security:check": "pnpm audit",
    "security:check:dev": "pnpm audit --dev",
    "// === Web App - Development ===": "",
    "dev:web": "pnpm --filter=@shm/web dev",
    "dev:web:gateway": "SEED_IDENTITY_ENABLED=true SEED_IDENTITY_DEFAULT_ORIGIN=http://localhost:3000 pnpm --filter=@shm/web dev",
    "dev:web:custom": "SEED_BASE_URL=${CUSTOM_DOMAIN:-http://localhost:3000} pnpm --filter=@shm/web dev --host",
    "dev:web:standalone": "concurrently -n \"BACKEND,WEB\" -c \"blue,green\" -p \"[{name}]\" \"./dev run-backend -- -http.port=53001 -grpc.port=53002 -p2p.port=53000 -data-dir=$PWD/.dev-data/standalone\" \"SEED_BASE_URL=\\\"http://localhost:3099\\\" PORT=3099 SEED_IDENTITY_ENABLED=true SEED_IDENTITY_DEFAULT_ORIGIN=\\\"http://localhost:3000\\\" DAEMON_HTTP_URL=http://localhost:53001 VITE_DESKTOP_HTTP_PORT=53001 VITE_DESKTOP_GRPC_PORT=53002 VITE_DESKTOP_P2P_PORT=53000 pnpm --filter=@shm/web dev --host\"",
    "// === Web App - Production ===": "",
    "build:web": "pnpm --filter=@shm/web build",
    "prod:web": "pnpm build:web && pnpm --filter=@shm/web start:prod",
    "prod:web:gateway": "pnpm build:web && SEED_IDENTITY_ENABLED=true pnpm --filter=@shm/web start:prod",
    "// === Desktop App ===": "",
    "dev:desktop": "pnpm --filter=@shm/desktop dev",
    "dev:desktop:prod": "VITE_DESKTOP_HTTP_PORT=53001 VITE_DESKTOP_GRPC_PORT=53002 VITE_DESKTOP_P2P_PORT=53000 VITE_DESKTOP_APPDATA=appData.prod.local pnpm --filter=@shm/desktop dev",
    "desktop": "concurrently -n \"DESKTOP:APP,UI\" -c \"blue,green\" -p \"[{name}]\" \"pnpm --filter=@shm/desktop dev\" \"pnpm watch\"",
    "types:suppress": "node scripts/suppress-ts-errors.mjs",
    "types:count": "node scripts/count-ts-directives.mjs",
    "types:dashboard": "mkdir -p reports/ts-directives && echo '[]' > reports/ts-directives/existing-data.json && node scripts/count-ts-directives.mjs --output=json --output-file=reports/ts-directives/current.json && node scripts/generate-ts-dashboard.mjs",
    "build:desktop": "pnpm --filter=@shm/desktop package",
    "desktop:make": "pnpm --filter=@shm/desktop make",
    "desktop:publish": "pnpm --filter=@shm/desktop publish",
    "desktop:devtools": "pnpm --filter=@shm/desktop devtools",
    "desktop:perf": "pnpm --filter=@shm/performance test",
    "// === Other Apps ===": "",
    "dev:explore": "pnpm --filter=@shm/explore dev",
    "build:explore": "pnpm --filter=@shm/explore build",
    "dev:landing": "pnpm --filter=@shm/landing dev",
    "build:landing": "pnpm --filter=@shm/landing build",
    "preview:landing": "pnpm --filter=@shm/landing preview",
    "dev:docs": "pnpm --filter=@shm/docs start",
    "// === Performance ===": "",
    "perf:web": "pnpm --filter=@shm/perf-web start --url http://localhost:3000 --app web",
    "perf:landing": "pnpm --filter=@shm/perf-web start --url http://localhost:4173 --app landing",
    "perf:dash": "pnpm --filter=@shm/perf-web generate-index && pnpm --filter=@shm/performance-dashboard copy-results && pnpm --filter=@shm/performance-dashboard dev",
    "perf:dash:build": "pnpm --filter=@shm/performance-dashboard copy-results && pnpm --filter=@shm/performance-dashboard build",
    "// === Utilities ===": "",
    "watch": "pnpm -r --parallel run watch",
    "clean": "pnpm -r exec rm -rf dist node_modules .turbo",
    "clean:deps": "rm -rf node_modules pnpm-lock.yaml && pnpm -r exec rm -rf node_modules"
  },
  "repository": "github:mintterhypermedia/mintter",
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "frontend/apps/*",
    "frontend/packages/*",
    "docs"
  ],
  "dependencies": {
    "@babel/runtime": "7.18.9",
    "@bufbuild/protoc-gen-es": "1.4.1",
    "@connectrpc/protoc-gen-connect-es": "1.6.1",
    "@radix-ui/react-slot": "^1.2.3",
    "cross-env": "7.0.3",
    "prettier": "3.0.2",
    "react-native": "0.75.2",
    "react-native-svg": "15.6.0",
    "satori": "0.12.2",
    "svg2img": "1.0.0-beta.2",
    "typescript": "5.8.3"
  },
  "pnpm": {
    "overrides": {
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "@types/react": "18.2.64",
      "@types/react-dom": "18.2.19",
      "@tanstack/react-query": "4.36.1",
      "hast-util-to-mdast": "10.1.2",
      "mdast-util-to-hast": "13.2.0",
      "rehype-remark": "10.0.0",
      "remark-rehype": "11.1.1",
      "rehype-parse": "9.0.1",
      "parse5": "7.2.1",
      "@noble/curves": "1.6.0",
      "@noble/hashes": "1.5.0",
      "@noble/ciphers": "1.0.0",
      "@scure/bip32": "1.5.0",
      "@scure/bip39": "1.4.0"
    },
    "onlyBuiltDependencies": [
      "@ipshipyard/node-datachannel",
      "@sentry/cli",
      "@tailwindcss/oxide",
      "aws-sdk",
      "better-sqlite3",
      "core-js",
      "core-js-pure",
      "electron",
      "electron-winstaller",
      "esbuild",
      "fs-xattr",
      "macos-alias",
      "msw",
      "sharp"
    ]
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@types/react": "18.2.64",
    "@types/react-dom": "18.2.19",
    "rollup": "4.44.0",
    "backslash": "<=0.2.0",
    "chalk": "4.1.2",
    "chalk-template": "<=1.1.0",
    "color-convert": "<=2.0.1",
    "color-name": "<=1.1.4",
