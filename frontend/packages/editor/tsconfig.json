{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src/index"],
      "@shm/ui": ["../ui/src/index.tsx"],
      "@shm/ui/*": ["../ui/src/*"],
      "@shm/shared": ["../shared/src/index.ts"],
      "@shm/shared/*": ["../shared/src/*"],
      "@shm/editor/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "dist", "node_modules"]
}