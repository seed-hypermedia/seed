{
  "include": ["*.ts", "*.tsx", "components/*.tsx"],
  "exclude": ["node_modules", "../../packages/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "noLib": false,
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@shm/shared": ["../../packages/shared/src/index.ts"],
      "@shm/shared/*": ["../../packages/shared/src/*"]
    }
  }
}
