[please]
SelfUpdate = false

[parse]
BlacklistDirs = "node_modules"
BlacklistDirs = "target"
BuildDefsDir = "build/rules"
BuildFileName = "BUILD.plz"
GitFunctions = true

[build]
PassUnsafeEnv = "WORKSPACE" ; This is expected to be set via direnv to point to the absolute path to the workspace. Needed to do some nasty but useful workarounds.
PassUnsafeEnv = "SEED_MISE_BIN"
ExitOnError = true
Path = "/bin:/usr/bin"

[cache]
Dir = ".plz-cache"
DirCacheHighWaterMark = "8GiB"
DirCacheLowWaterMark = "5GiB"
DirClean = true

[buildconfig]
go-tool = //build/tools:go
md5sum-tool = //build/tools:md5sum
yarn-tool = //build/tools:yarn
